{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "jsx": "react-native",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@navigation/*": [
                "src/navigation/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}

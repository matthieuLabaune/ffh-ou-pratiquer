# API Configuration
# Remplacez ces valeurs par vos configurations

# ===================================
# API Backend Configuration
# ===================================
API_BASE_URL=https://your-ngrok-url.ngrok-free.app/api
API_TIMEOUT=30000

# ===================================
# API Endpoints
# ===================================
OU_PRATIQUER_ENDPOINT=/ou-pratiquer/search
STRUCTURES_ENDPOINT=/structures
AUTH_ENDPOINT=/auth
REFERENCE_ENDPOINT=/reference

# ===================================
# API Headers
# ===================================
API_CONTENT_TYPE=application/json
NGROK_SKIP_BROWSER_WARNING=true

# ===================================
# Map Services API Keys
# ===================================
# Google Maps (pour react-native-maps)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mapbox (alternative à Google Maps)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ===================================
# App Configuration
# ===================================
APP_NAME=FFH Où Pratiquer
APP_VERSION=1.0.0
ENVIRONMENT=development

# ===================================
# Feature Flags
# ===================================
ENABLE_QUESTIONNAIRE=false
ENABLE_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=false

# ===================================
# Analytics & Monitoring (optionnel)
# ===================================
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=your_ga_id
# AMPLITUDE_API_KEY=your_amplitude_key

# ===================================
# Storage Configuration
# ===================================
CACHE_DURATION_STRUCTURES=600000
CACHE_DURATION_REFERENCE=3600000

# ===================================
# Search Configuration
# ===================================
DEFAULT_SEARCH_RADIUS=10
MAX_SEARCH_RESULTS=100
ENABLE_AUTOCOMPLETE=true
AUTOCOMPLETE_DEBOUNCE_MS=300

# ===================================
# Location Configuration
# ===================================
LOCATION_ACCURACY=high
LOCATION_TIMEOUT=10000
